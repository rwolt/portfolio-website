  <style>
    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h1,
    h2 {
      font-family: "Nunito Sans", sans-serif;
    }

    h2 {
      margin-bottom: 0;
    }
    section {
      padding: 1rem;
      width: 100%;
    }

    section p {
      font-size: 1.25rem;
    }

    .block {
      display: flex;
      justify-content: center;
    }

    .intro-container {
      display: flex;
      flex-direction: column;
      padding-left: 2rem;
    }

    .skills-container {
      display: flex;
      justify-content: flex-start;
      align-items: center;
    }

    .skills-container > ul {
      margin: 0 5rem;
    }

    .projects-container {
      display: flex;
    }

    .projects-container > a {
      text-decoration: none;
      text-align: center;
    }

    @media screen and (min-width: 320px) {
      #intro > .block,
      .projects-container {
        flex-direction: column;
        align-items: center;
      }

      #intro > .block > img {
        max-width: 250px;
        padding: 1rem;
      }

      .intro-container {
        padding: 0;
      }

      .hero h1 {
        font-size: 4rem;
        margin: 0;
      }

      .hero h2 {
        font-size: 1.75rem;
        margin: 0;
      }
    }

    @media screen and (min-width 480px) {
    }

    @media screen and (min-width: 768px) {
      #intro > .block,
      .projects-container {
        flex-direction: row;
      }

      .container {
        margin: 0 2rem;
      }

      /* .intro-container {
        padding-left: 2rem;
      } */
    }

    @media screen and (min-width: 1024px) {
      .container {
        margin: 0 15%;
      }
    }

    @media screen and (min-width: 1440px) {
      .container {
        margin: 0 25%;
      }
    }
  </style>
</Layout>
